{
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "*.d.ts"],
	"compilerOptions": {
		"target": "esnext",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "WebWorker", "Webworker.Iterable", "esnext", "DOM.AsyncIterable", "WebWorker.AsyncIterable"],
		"types": ["vite/client", "vite-plugin-comlink/client", "@types/node", "@types/wicg-file-system-access"],
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
